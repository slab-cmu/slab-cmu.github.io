---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      <span class="font-weight-bold">{{ site.lab_name }}</span> // {{ site.lab_long }}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.logo %}
    <div class="profile float-{%- if page.logo.align == 'left' %}left{% else %}right{% endif %}">
      {% if page.logo.image %}
        {% assign logo_image_path = page.logo.image | prepend: 'assets/img/' %}
        {% include figure.liquid loading="eager"
        path=logo_image_path 
        class="img-fluid z-depth-0 rounded" %}
      {% endif %}
      {% if page.logo.address %}
      <div class="address">
        {{ page.logo.address }}
      </div>
      {% endif %}
    </div>
    {% endif %}

    <div class="clearfix">
      {{ content }}
    </div>

    {% if page.news -%}
    <!-- News -->
    {%- include news.liquid %}
    {%- endif %}
    {% if page.selected_papers -%}
      <!-- Selected papers -->
      {%- include selected_papers.liquid %}
    {%- endif %}
    {%- if page.social %}
    <!-- Social -->
    <div class="social">
      <div class="contact-icons">
      {% include social.liquid %}
      </div>

      <div class="contact-note">
        {{ site.contact_note }}
      </div>
      
    </div>
    {%- endif %}
  </article>

</div>
